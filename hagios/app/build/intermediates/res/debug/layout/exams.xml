<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exams and Marks"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:background="@color/apptheame"/>

    <LinearLayout
        android:id="@+id/linear_layoutevents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DFDFDF"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/examsClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exams"
            android:textSize="14sp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/marksClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Marks"
            android:textSize="14sp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="#ffffff"/>

    </LinearLayout>



    <com.example.samikshe.utils.AnimatedExpandableListView
        android:id="@+id/lvExpexam"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1dp"
        />

</LinearLayout><!-- From: file:/D:/AndroidstudioWorkplace/samekshe/hagios/app/src/main/res/layout/exams.xml -->