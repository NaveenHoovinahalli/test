<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_new"
    tools:context="com.example.samikshe.activity.LoginActivity"
    >


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/apptheame"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EdPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="@drawable/apptheame_rounded_btn"
        android:text="Login"
        android:textColor="@android:color/white" />

    <EditText
        android:editable="false"
        android:id="@+id/EtUserName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/EdPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loginusername"
        android:layout_marginBottom="16dp"
        android:padding="5dp"
        android:ems="10"
         />

    <EditText
        android:editable="false"
        android:id="@+id/EdPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/loginpassword"
        android:ems="10"
        android:padding="5dp"

     >

        <requestFocus />
    </EditText>



</RelativeLayout>
