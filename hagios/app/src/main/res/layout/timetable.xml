<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
     >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TimeTable"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:background="@color/apptheame"/>

    <LinearLayout
        android:id="@+id/linear_layoutevents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >

        <TextView
            android:background="@drawable/leftradious"
            android:id="@+id/subjectClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subject"
            android:textSize="14sp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="#ffffff"
            />

        <TextView
            android:visibility="visible"
            android:background="@drawable/rightradious"
            android:id="@+id/foodClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Food"
            android:textSize="14sp"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="#ffffff"/>

    </LinearLayout>


            <com.wacli.ecard.utils.AnimatedExpandableListView
                android:id="@+id/lvExpTimeTable"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:cacheColorHint="#00000000"
                android:groupIndicator="@null"
                android:dividerHeight="1dp"
                />

</LinearLayout>