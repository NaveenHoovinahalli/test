<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apptheame"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/schoollogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/schoollogo"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="5dp"
            android:id="@+id/student_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher1"
            app:border_width="1dp"
            app:border_color="#000000"
            android:onClick="onclick"
            android:layout_marginLeft="2dp"
            />

    <TextView
        android:layout_toRightOf="@id/student_iv"
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naveen Hoovinahalli"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:layout_margin="2dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_toRightOf="@id/student_iv"
        android:layout_below="@+id/txtName"
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="School Name 1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_toRightOf="@id/student_iv"
            android:layout_below="@+id/school"
            android:id="@+id/txtclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text=" 10 A --16"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"/>

     </RelativeLayout>


</LinearLayout>